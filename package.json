{
  "name": "es2015-scoping",
  "version": "1.0.0",
  "description": "Block scoping in ES2015",
  "scripts": {
    "lint": "eslint .",
    "test": "mocha --compilers js:babel-register 'test/**/*.js'",
    "pretest": "npm run lint"
  },
  "eslintConfig": {
    "extends": "airbnb/base",
    "env": {
      "mocha": true
    },
    "rules": {
      "no-var": 0,
      "vars-on-top": 0,
      "block-scoped-var": 0,
      "no-console": 0,
      "no-loop-func": 0,
      "no-use-before-define": 0
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seanking/es2015-scoping.git"
  },
  "author": "Sean King",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/seanking/es2015-scoping/issues"
  },
  "homepage": "https://github.com/seanking/es2015-scoping#readme",
  "devDependencies": {
    "babel-register": "^6.4.3",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^3.1.0",
    "mocha": "^2.3.4"
  }
}
